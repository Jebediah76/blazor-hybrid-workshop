@inject MonkeyService monkeyService
@page "/"

<div>
    <button class="button-yellow" @onclick="AddMonkey"></button>

    @if (monkeys is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <ul class="card-list">
            @foreach (var monkey in monkeys)
            {
                <li class="card-item">
                    <img class="card-image" src="@monkey.Image">
                    <div class="card-content">
                        <h2>@monkey.Name</h2>
                        <p>@monkey.Details</p>
                    </div>
                </li>
            }
        </ul>
    }
</div>

@code {
    private List<Monkey> monkeys = new();

    // OnInitializedAsync is a built-in lifecycle event that is called when this page is initialized
    protected override async Task OnInitializedAsync()
    {
        // Load monkey from MonkeyService
        monkeys = await monkeyService.GetMonkeys();
    }

    private void AddMonkey()
    {
        // MAUI Debug console
        Debug.WriteLine("Add Monkey");
    }
}
